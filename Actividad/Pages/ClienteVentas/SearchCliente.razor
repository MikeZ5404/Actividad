@inject ClienteService clienteService

<div class="input-group mb-3 mt-3">
    <input type="text" class="form-control" placeholder="Ingrese nombre del cliente"
           aria-label="Recipient’s username with two button addons"
           @bind-value="nombrecliente"
           @bind-value:event="oninput">
    <button @onclick="buscar" class="btn btn-outline-dark" type="button">Buscar</button>
    <button @onclick="limpiar" class="btn btn-outline-danger" type="button">Limpiar</button>
</div>

@code {
    private async Task limpiar()
    {
        nombrecliente = string.Empty;
        await clienteService.notificarBusqueda(nombrecliente);
    }

    public string nombrecliente { get; set; } = string.Empty;

    private async Task buscar()
    {
        await clienteService.notificarBusqueda(nombrecliente);
    }
}
