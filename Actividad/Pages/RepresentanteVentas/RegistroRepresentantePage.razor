@page "/registro"
@inject NavigationManager navigationManager
@inject EmpleadoService empleadoService


<button @onclick="nuevo" class="btn-primary">Nuevo</button>

<SearchRepresentante/>

@if (lista != null && lista.Count != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Jefe</th>
                <th>Sucursal</th>
                <th>Operaciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in lista)
            {
                <tr>
                    <td>@item.Num_Empl</td>
                    <td>@item.Nombre</td>
                    <td>@item.nombreJefe</td>
                    <td>@item.nombreSucursal</td>
                    <td>
                        <button class="btn btn-primary" @onclick="(() => recuperarEmpleado(item.Num_Empl))">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen-fill" viewBox="0 0 16 16">
                                <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001" />
                            </svg>
                        </button>
                        <button class="btn btn-danger" @onclick="(() => eliminarEmpleado(item.Num_Empl))">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                            </svg>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    public List<RepresentanteListCLS> lista { get; set; } = new List<RepresentanteListCLS>();
    protected override Task OnInitializedAsync()
    {
        empleadoService.OnSearch += filtrar;

        listarEmpleados();
        return base.OnInitializedAsync();
    }

    private Task filtrar(string nombre)
    {
        lista = empleadoService.filtrarRepresentantes(nombre);
        StateHasChanged();
        return Task.CompletedTask;
    }

    private void listarEmpleados()
    {
        lista = empleadoService.listarRepresentantes();
    }

    private void nuevo()
    {
        navigationManager.NavigateTo("/formrepresentante");
    }

    private void recuperarEmpleado(int Num_Empl)
    {
        navigationManager.NavigateTo("/formrepresentante/edit/" + Num_Empl);
    }

    private void eliminarEmpleado(int Num_Empl)
    {
        empleadoService.eliminarEmpleado(Num_Empl);
        listarEmpleados();
    }
}